<%- layout("layouts/boilerplate") %> 
<!-- <h3>All Listings</h3> -->
 <style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        background: white;
        padding: 1rem;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
    }

    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 1rem;
        opacity: 0.7;
        text-decoration: none;
        color: #333;
        cursor: pointer;
        padding: 1rem;
        border-radius: 12px;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }
    .filter:hover{
        opacity: 1;
        color: #fe424d;
        text-decoration: none;
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(254, 66, 77, 0.3);
        background: white;
    }

    .filter i {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
        transition: transform 0.3s ease;
    }

    .filter:hover i {
        transform: scale(1.2);
    }

    .filter p {
        font-size: 0.85rem;
        margin-top: 0.5rem;
        font-weight: 600;
        margin-bottom: 0;
    }

    .tax-info {
        display: none;
        color: #666;
        font-size: 0.9rem;
    }
    
    .btn{
        margin-top: 1rem;
    }
    
    .tax-toggle {
        border: 2px solid #fe424d;
        border-radius: 25px;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
        background: white;
        transition: all 0.3s ease;
    }

    .tax-toggle:hover {
        background: #ffe5e7;
        transform: scale(1.05);
    }

    .form-check-input:checked {
        background-color: #fe424d;
        border-color: #fe424d;
    }

    .row {
        margin-top: 2rem;
    }

    .card-text {
        padding: 0.5rem 0;
    }

    .card-text b {
        font-size: 1.1rem;
        color: #222;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .listing-card {
        animation: fadeInUp 0.6s ease-out;
    }

    .listing-card:nth-child(1) { animation-delay: 0.1s; }
    .listing-card:nth-child(2) { animation-delay: 0.2s; }
    .listing-card:nth-child(3) { animation-delay: 0.3s; }
    .listing-card:nth-child(4) { animation-delay: 0.4s; }
    .listing-card:nth-child(5) { animation-delay: 0.5s; }
    .listing-card:nth-child(6) { animation-delay: 0.6s; }

    .card-body {
        position: relative;
        z-index: 3;
    }

    .price-highlight {
        color: #fe424d;
        font-weight: 700;
        font-size: 1.2rem;
    }
 </style>
 <div class="container-fluid">
    <!-- Toggle Button -->
    <button class="btn btn-outline-secondary d-lg-none mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
        Filters
    </button>

    <!-- Collapsible Filters -->
    <div class="collapse d-lg-block" id="filterCollapse">
        <div id="filters">
            <a href="/listings/filter?category=Trending" class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
            <a href="/listings/filter?category=Rooms" class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>
            <a href="/listings/filter?category=Iconic Cities" class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </a>
            <a href="/listings/filter?category=Mountains" class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </a>
            <a href="/listings/filter?category=Castles" class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </a>
            <a href="/listings/filter?category=Amazing Pools" class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </a>
            <a href="/listings/filter?category=Camping" class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </a>
            <a href="/listings/filter?category=Farms" class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </a>
            <a href="/listings/filter?category=Arctic" class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </a>
            <a href="/listings/filter?category=Domes" class="filter">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p>Domes</p>
            </a>
            <a href="/listings/filter?category=Boats" class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </a>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display Total after Taxes</label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <div class="card-img-wrapper">
                    <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>"
                        class="card-img-top"
                        alt="listing_image" style="height: 20rem;">
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <b style="font-size: 1.2rem; color: #222;"><%= listing.title %></b><br>
                        <% if (listing.category) { %>
                            <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 0.3rem 0.8rem; border-radius: 15px; font-size: 0.75rem; margin: 0.5rem 0; display: inline-block;">
                                <i class="fas fa-tag"></i> <%= listing.category %>
                            </span><br>
                        <% } %>
                        <span class="price-highlight">&#8377; <%= Number(listing.price).toLocaleString("en-IN") %></span> <span style="color: #666; font-size: 0.9rem;">/ night</span>
                        <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display != "inline") {
                 info.style.display = "inline";
            }else{
            info.style.display = "none";
        }
    }
    });
</script>

